{
    "name": "§c§nL §d§ni §e§nb §a§ne §b§nr §c§na §d§nt §e§ni §a§no §b§nn",
    "description": "§fWhen you die, you'll make a colorful explosion :)",
    "type": "origins:multiple",
    "resource": {
        "type": "origins:resource",
        "min": 0,
        "max": 1,
        "start_value": 0,
        "hud_render": {
            "should_render": false
        },
        "max_action": {
            "type": "origins:execute_command",
            "command": "execute as @s run function chromakwt:explosion"
        }
    },
    "death": {
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "*:*_resource",
            "change": 1
        },
        "interval": 4,
        "condition": {
            "type": "origins:health",
            "comparison": "==",
            "compare_to": 0
        }
    },
    "alive": {
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "*:*_resource",
            "change": -1
        },
        "interval": 4,
        "condition": {
            "type": "origins:health",
            "comparison": ">",
            "compare_to": 0
        }
    }
}