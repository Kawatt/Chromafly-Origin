{
    "name": "§c§nCamouflage",
    "description": "§cYou can make your armor look transparent.",
    "badges": [
        {
            "type": "origins:tooltip",
            "sprite": "origins:textures/gui/badge/toggle.png",
            "text": [
                "Toggle with [",
                {
                    "keybind": "key.saveToolbarActivator"
                },
                "]."
            ]
        },
        {
            "type": "origins:tooltip",
            "sprite": "origins:textures/gui/badge/info.png",
            "text": "When hit, the armor will be visible for a short time."
        }
    ],
    "type": "origins:multiple",
    "toggle": {
        "type": "origins:toggle",
        "active_by_default": false,
        "retain_state": true,
        "key": {
            "key": "key.saveToolbarActivator"
        },
        "condition": {
            "type": "apoli:resource",
            "resource": "*:*_disable",
            "comparison": "==",
            "compare_to": 0
        }
    },
    "hidearmor": {
        "type": "origins:prevent_feature_render",
        "features": [
            "armor"
        ],
        "condition": {
            "type": "origins:power_active",
            "power": "*:*_toggle"
        }
    },
    "disable": {
        "type": "apoli:cooldown",
        "cooldown": 40,
        "hud_render": {
            "should_render": false
        }
    },
    "hit": {
        "type": "apoli:self_action_when_hit",
        "entity_action": {
            "type": "apoli:trigger_cooldown",
            "power": "*:*_disable"
        }
    }
}